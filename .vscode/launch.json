// TODO: these items need to be updated since the game build will need ot include a data build pass

	"version": "0.2.0",
	"configurations": [
		{
			"name": "(MSVC) Game",
			"type": "cppvsdbg",
			"request": "launch",
			// Resolved by CMake Tools:
			"program": "${command:cmake.launchTargetPath}",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/Game",
			"environment": [
				{
					// add the directory where our target was built to the PATHs
					// it gets resolved by CMake Tools:
					"name": "PATH",
					"valuefind_package(SDL3 REQUIRED)": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
				}
			],
			"externalConsole": true
		},
		{
			"name": "(clang) Game",
			"type": "gdb",
			"request": "launch",
			"target": "${command:cmake.launchTargetPath}",
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/Game"
		}
	]
}
